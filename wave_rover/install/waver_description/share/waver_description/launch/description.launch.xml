<?xml version="1.0"?>
<launch>
  <arg name="use_sim_time" default="true" />
  <arg name="model" default="$(find-pkg-share waver_description)/urdf/waver.xacro" />
  <arg name="sim_control" default="gazebo" description="(gazebo/ros2)" />
  <arg name="camera_type" default="raspi" description="(raspi/depth)" />

  <!-- Joint State Publisher -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" exec="joint_state_publisher" />

  <!-- Robot State Publisher -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" exec="robot_state_publisher" output="screen">
    <param name="use_sim_time" value="$(var use_sim_time)" />
    <param name="robot_description"
      value="$(command 'xacro $(var model) sim_control:=$(var sim_control) camera_type:=$(var camera_type)')" />
  </node>

</launch>
