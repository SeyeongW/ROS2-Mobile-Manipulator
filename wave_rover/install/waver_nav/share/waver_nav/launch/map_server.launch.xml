<launch>
    <arg name="map_file" default="$(find-pkg-share waver_nav)/maps/coworking_map.yaml" />

    <arg name="use_sim_time" default="true" />
    <arg name="model" default="$(find-pkg-share waver_description)/urdf/waver.xacro" />
    <arg name="rviz_config" default="$(find-pkg-share waver_viz)/rviz/waver.rviz" />


    <include file="$(find-pkg-share waver_viz)/launch/rviz.launch.xml">
        <arg name="use_sim_time" value="$(var use_sim_time)" />
        <arg name="model" value="$(var model)" />
        <arg name="rviz_config" value="$(var rviz_config)" />
    </include>

    <!-- Map server node -->
    <node name="map_server" pkg="nav2_map_server" exec="map_server" output="screen">
        <param name="yaml_filename" value="$(var map_file)" />
    </node>

    <node name="lifecycle_manager" pkg="nav2_lifecycle_manager" exec="lifecycle_manager"
        output="screen">
        <param name="autostart" value="true" />
        <param name="node_names" value="['map_server']" />
    </node>

</launch>
